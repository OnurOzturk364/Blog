                      <label>Yazar Yetki Kodu</label><br />
                      <input type="text" name="yetki" value="@Model.yetki" /><br />
                      <label>Yazar Şifre</label><br />
                      <input type="password" name="sifre" value="@Model.sifre" /><br />
                      <input type="submit" value="Güncelle" />

                  </div>
    }
}
