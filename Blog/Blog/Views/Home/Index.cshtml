@model IEnumerable<Blog.Models.MakaleListesiModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var makale in Model)
{
    <article class="masonry__brick entry format-standard" data-aos="fade-up">

        <div class="s-content__media col-full">
            <div class="entry__thumb">
                <a href="@Url.Action("MakaleDetay", "Home", new { id = makale.Id })" class="entry__thumb-link">
                    <img src="~/Image/@makale.resim_yol"
                         srcset="~/Image/@makale.resim_yol" alt="">
                </a>
            </div>
        </div>
        <div class="entry__text">
            <div class="entry__header">

                <div class="entry__date">
                    <a href="">@makale.Tarih</a>
                </div>
                <h1 class="entry__title"><a href="@Url.Action("MakaleDetay", "Home", new { id = makale.Id })">@makale.Baslik</a></h1>

            </div>
            <div class="entry__excerpt">
                <p>
                    @makale.Yazi
                </p>
            </div>
            <div class="entry__meta">
                <span class="entry__meta-links">
                    <a href="#">Design</a>
                    <a href="~/Image/@makale.resim_yol">Photography</a>
                </span>
            </div>
        </div>

    </article>


}