@model Blog.Models.yazar
@{
    ViewBag.Title = "YazarDuzenle";
}

<br /><br /><br /><br />
@{
    using (Html.BeginForm("YazarDuzenle", "Home", FormMethod.Post))
    {

                  <div>
                      <label>ID</label><br />
                      <input type="text" value="@Model.id" /><br />
                      <label>Yazar Adı</label><br />
                      <input type="text" name="adi" value="@Model.adi" /><br />
                      <label>Yazar Soyadı</label><br />
                      <input type="text" name="soyadi" value="@Model.soyadi" /><br />
